.group-form
  .lmo-disabled-form{ng-show: "isDisabled"}
  %md-input-container.md-block
    %label{translate: "group_form.group_name", ng-if: "group.isParent()"}
    %label{translate: "group_form.subgroup_name", ng-if: "!group.isParent()"}
    %input.lmo-primary-form-input#group-name{type: "text", placeholder: "{{'group_form.group_name_placeholder' | translate}}", ng-required: true, ng-model: "group.name", md-maxlength: "255"}
    %validation_errors{subject: "group", field: "name"}

  %md-input-container.md-block
    %label{translate: "group_form.description"}
    %textarea.lmo-primary-form-input#group-description{ng-model: "group.description", placeholder: "{{'group_form.description_placeholder' | translate }}"}

  .group-form__privacy-statement.lmo-hint-text {{privacyStatement()}}

  %section.group-form__section.group-form__privacy
    %h3.lmo-h3{translate: "group_form.privacy"}
    %md-radio-group{ng-model: "group.groupPrivacy", ng-change: "groupPrivacyChanged()"}
      %md-radio-button{ng-repeat: "privacy in ['open', 'closed', 'secret']", ng-value: "privacy", aria-label: "{{privacy}}"}
        %span
          %strong{trnaslate: "common.privacy.{{privacy}}"}
          %span {{ privacyStringFor(privacy) }}

  .group-form__advanced{ng-show: "expanded"}
    %section.group-form__section.group-form__joining.lmo-form-group{ng-if: "group.privacyIsOpen()"}
      %h3.lmo-h3{translate: "group_form.how_do_people_join"}
      %md-radio-group{ng-model: "group.membershipGrantedUpon"}
        %md-radio-button{ng-repeat: "granted in ['request', 'approval']", ng-value: "granted"}
          %span{translate: "group_form.membership_granted_upon_{{granted}}"}

    %section.group-form__section.group-form__permissions
      %h3.lmo-h3{translate: "group_form.permissions"}
      %group_setting_checkbox{group: "group", setting: "allowPublicThreads", ng-if: "group.privacyIsClosed() && !group.isSubgroupOfSecretParent()"}
      %group_setting_checkbox{group: "group", setting: "parentMembersCanSeeDiscussions", translate-values: "{parent: group.parent().name}", ng-if: "group.isSubgroup() && group.privacyIsClosed()"}
      %group_setting_checkbox{group: "group", setting: "membersCanAddMembers"}
      %group_setting_checkbox{group: "group", setting: "membersCanCreateSubgroups"}
      %group_setting_checkbox{group: "group", setting: "membersCanStartDiscussions"}
      %group_setting_checkbox{group: "group", setting: "membersCanEditDiscussions"}
      %group_setting_checkbox{group: "group", setting: "membersCanEditComments"}
      %group_setting_checkbox{group: "group", setting: "membersCanRaiseMotions"}
      %group_setting_checkbox{group: "group", setting: "membersCanVote"}

      -# %label.lmo-form-labelled-input{ng-if: "group.privacyIsClosed() && !group.isSubgroupOfSecretParent()"}
      -#   %input.group-form__allow-public-threads{type: "checkbox", ng-model: "buh.allowPublicThreads", ng-change: "allowPublicThreadsClicked()"}
      -#   %span{translate: "group_form.allow_public_threads"}
      -#
      -# %label.lmo-form-labelled-input{ng-if: "group.isSubgroup() && group.privacyIsClosed()"}
      -#   %input.group-form__parent-members-can-see-discussions{type: "checkbox", ng-model: "group.parentMembersCanSeeDiscussions"}
      -#   %span{translate: "group_form.parent_members_can_see_discussions", translate-value-parent: "{{group.parent().name}}"}

  .lmo-md-actions
    %div{ng-if: "expanded"}
    %md-button.md-accent.group-form__advanced-link{type: "button", ng-if: "!expanded", ng-click: "expandForm()", translate: "group_form.advanced_settings"}
    %md-button.md-primary.md-raised.group-form__submit-button{ng-click: "submit()"}
      %span{ng-if: "group.isNew() && group.isParent()", translate: "group_form.submit_start_group"}
      %span{ng-if: "group.isNew() && !group.isParent()", translate: "group_form.submit_start_subgroup"}
      %span{ng-if: "!group.isNew()", translate: "common.action.update_settings"}
