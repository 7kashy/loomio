.notify-group-form
  %md-toolbar
    .md-toolbar-tools.lmo-flex__space-between
      %h1.lmo-h1{translate: "notify_group.modal_title"}
      %material_modal_header_cancel_button
  .notify-group-form__content
    %loading{ng-if: "initExecuting"}
    %p.lmo-hint-text{translate: "notify_group.modal_error", ng-if: "!initExecuting && !group"}
    .notify-group-form__content{ng-if: "group"}
      .notify-group-form__filter.lmo-flex
        %md-input-container.polls-page__search.md-block{md-no-float: "true"}
          %i.material-icons search
          %input{ng-model: "fragment", ng-change: "updateVisible()", ng-model-options: "{debounce: 300}", placeholder: "{{'notify_group.search_placeholder' | translate}}"}

      %md-list.notify-group-form__members
        %md-list-item.notify-group-form__member.lmo-flex.lmo-flex__center.lmo-flex__space-between{ng-show: "user.showInNotifyGroup", layout: "row", ng-repeat: "user in group.members() | orderBy: 'name' track by user.id"}
          %user_avatar.lmo-margin-right{user: "user", size: "small"}
          .lmo-flex__grow {{ user.name }}
          %md-checkbox{ng-model: "userIds[user.id]"}

      .lmo-md-actions
        %p.lmo-hint-text{translate: "notify_group.members_count", translate-value-count: "{{selectedUserIds().length}}"}
        %md-button.md-primary.md-raised{ng-click: "submit()", translate: "common.action.done"}
