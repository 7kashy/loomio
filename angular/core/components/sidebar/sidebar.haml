%md-sidenav.md-sidenav-left.lmo-no-print{role: "navigation", md-component-id: "left", md-is-open: "showSidebar", md-is-locked-open: "$mdMedia('gt-md') && showSidebar", md-whiteframe: "4", aria-label: "{{ 'sidebar.aria_labels.heading' | translate }}"}
  %md_content.sidebar__content.lmo-flex__space-between{flex: "", layout: "column", ng-click: "sidebarItemSelected()", role: "navigation"}
    %div
      .sidebar__user-panel.lmo-no-print
        %a.sidebar__user-avatar-container{lmo-href: "/profile"}
          %user_avatar{user: "currentUser()", size: "medium-circular", ng-if: "currentUser().avatarKind != 'initials'"}
          .sidebar__user-icon-container{ng-if: "currentUser().avatarKind == 'initials'"}
            %i.sidebar__user-icon.material-icons person
        .sidebar__user-details
          .sidebar__user-name
            {{currentUser().name}}
          .sidebar__user-username
            @{{currentUser().username}}
      %outlet{name: "after-user-username", model: "currentUser()"}
      %md_list.sidebar__list.sidebar__threads{layout: "column", aria-label: "{{ 'sidebar.aria_labels.threads_list' | translate }}"}
        %md_list_item.lmo-flex{layout: "row", ng-class: "{'sidebar__list-item--selected': onPage('inboxPage')}"}
          %md_button.sidebar__list-item-button.sidebar__list-item-button--decisions{href: "", lmo-href: "/inbox", aria-label: "{{ 'sidebar.unread' | translate }}"}
            %md_avatar_icon.sidebar__list-item-icon.material-icons inbox
            %span{translate: "sidebar.unread", translate-value-count: "{{unreadThreadCount()}}"}
        %md_list_item.lmo-flex{layout: "row", ng-class: "{'sidebar__list-item--selected': onPage('pollsPage')}"}
          %md_button.sidebar__list-item-button.sidebar__list-item-button--decisions{href: "", lmo-href: "/polls", aria-label: "{{ 'sidebar.decisions' | translate }}"}
            %md_avatar_icon.sidebar__list-item-icon.material-icons thumbs_up_down
            %span{translate: "sidebar.decisions"}
          %md_button.md-button--tiny
            %i.material-icons add
            %md-tooltip
              %span{translate: "sidebar.new_decision"}
        %md_list_item.lmo-flex{layout: "row", ng-class: "{'sidebar__list-item--selected': onPage('dashboardPage')}"}
          %md_button.sidebar__list-item-button.sidebar__list-item-button--recent{href: "", lmo-href: "/dashboard", aria-label: "{{ 'sidebar.recent' | translate }}"}
            %i.sidebar__list-item-icon.material-icons forum
            %span{translate: "sidebar.threads"}
          %md_button.md-button--tiny
            %i.material-icons add
            %md-tooltip
              %span{translate: "sidebar.new_thread"}
        %md_list_item.lmo-flex{layout: "row"}
          %md_button.sidebar__list-item-button.sidebar__list-item-button--recent{href: "", lmo-href: "/groups", aria-label: "{{ 'sidebar.recent' | translate }}"}
            %i.sidebar__list-item-icon.material-icons group
            %span{translate: "sidebar.groups"}
          %md_button.md-button--tiny
            %i.material-icons add
            %md-tooltip
              %span{translate: "sidebar.new_group"}
      %md_list.sidebar__list.sidebar__groups{ng-class: "{'sidebar__no-groups': groups().length < 1}", aria-label: "{{ 'sidebar.aria_labels.groups_list' | translate }}"}
        %md_list_item{ng_repeat: "group in groups() | orderBy: 'fullName' track by group.id"}
          %md_button.sidebar__list-item-button.sidebar__list-item-button--group{href: "", lmo-href: "{{groupUrl(group)}}", aria-label: "{{group.name}}", ng-if: "group.isParent()", ng-class: "{'sidebar__list-item--selected': onPage('groupPage', group.key)}"}
            %img.md-avatar.lmo-box--tiny.sidebar__list-item-group-logo{ng_src: "{{group.logoUrl()}}"}
            %span {{group.name}}
          %md_button.sidebar__list-item-button--subgroup{href: "", lmo-href: "{{groupUrl(group)}}", ng-if: "!group.isParent()", ng-class: "{'sidebar__list-item--selected': onPage('groupPage', group.key)}"}
            {{group.name}}
          .sidebar__list-item-padding
      %md_list_item.lmo-flex{layout: "row"}
        %md_button.sidebar__list-item-button.sidebar__list-item-button--decisions{href: "", lmo-href: "/explore", aria-label: "{{ 'sidebar.unread' | translate }}", ng-class: "{'sidebar__list-item--selected': onPage('explorePage')}"}
          %md_avatar_icon.sidebar__list-item-icon.material-icons public
          %span{translate: "sidebar.explore"}

    .md-content__bottom
      %md_list_item.sidebar__list-subhead{translate: "common.settings"}
      %md_list.sidebar__list.sidebar__users{aria-label: "{{ 'sidebar.aria_labels.user_list' | translate }}"}
        %md_list_item
          %md_button.sidebar__list-item-button.sidebar__list-item-button--profile{href: "", lmo-href: "/profile", aria-label: "{{ 'sidebar.edit_profile' | translate }}", ng-class: "{'sidebar__list-item--selected': onPage('profilePage')}"}
            %i.sidebar__list-item-icon.material-icons perm_identity
            %span{translate: "sidebar.edit_profile"}
        %md_list_item
          %md_button.sidebar__list-item-button.sidebar__list-item-button--email-settings{href:  "", lmo-href: "/email_preferences", aria-label: "{{ 'sidebar.email_settings' | translate }}", ng-class: "{'sidebar__list-item--selected': onPage('emailSettingsPage')}"}
            %i.sidebar__list-item-icon.material-icons mail_outline
            %span{translate: "sidebar.email_settings"}
        %md_list_item
          %md_button.sidebar__list-item-button{href: "{{helpLink()}}", target: "_blank", aria-label: "{{ 'sidebar.help' | translate }}"}
            %i.sidebar__list-item-icon.material-icons help_outline
            %span{translate: "sidebar.help"}
        %md_list_item{ng-if: "showContactUs()"}
          %md_button.sidebar__list-item-button{href: "", ng-click: "contactUs()", aria-label: "{{ 'sidebar.contact' | translate }}"}
            %i.sidebar__list-item-icon.material-icons face
            %span{translate: "sidebar.contact"}
        %md_list_item
          %md_button.sidebar__list-item-button{href: "", ng-click: "signOut()", aria-label: "{{ 'sidebar.sign_out' | translate }}"}
            %i.sidebar__list-item-icon.material-icons exit_to_app
            %span{translate: "sidebar.sign_out"}
